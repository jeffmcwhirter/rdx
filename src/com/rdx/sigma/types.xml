<types  supercategory="Science and Education">

  <type name="type_rdx_instrument" foruser="false" description="Radiometrics Instrument"  category="Geoscience Data">
     <property name="icon" value="/rdx/rdx.png"/>
     <property name="form.resource.show" value="false"/>
     <property name="form.area.show" value="false"/>
     <property name="form.location.show" value="true"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.altitude.show" value="true"/>
   </type>


  <type name="type_rdx_radiometer"  super="type_rdx_instrument" description="Radiometrics Radiometer" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler"    xxxmetadata="project_pi,project_person,project_funding,enum_tag,content.keyword">
     <column name="ip_address"  type="string" label="IP Address"/>
     <column name="user_id"  type="string"  label="User ID"/>
     <column name="password"  type="password"  label="FTP User Password"/>
     <column name="active"  type="boolean"  default="true" label="Active"/>
     <wiki><![CDATA[
+section title={{name}}
<div style="max-height: 400px; overflow-y: auto;">
{{description wikify="true"}}
</div>
{{mapentry width="350" message=""}}
<p>
:heading Instrument Information
TBD

{{tree title="Data" details="false" showtoggle="false" message="" prefix="==Data=="}}

-section
]]>
</wiki>
<children><![CDATA[
<entries>
<entry  name="Raw Soundings"  type="group"/>
<entry  name="Sigma Soundings"  type="group"/>
</entries>
]]>
</children>

